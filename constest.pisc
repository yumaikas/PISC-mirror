: build ( counter list -- list )
	:list :counter
	$counter 0 = [ $list ] [ $counter 1 - { $counter $list } build ] if ;

: build-loop ( counter list -- list )
	:list :counter
	[ $counter 0 = not ] [  { $counter $list } :list $counter 1 - :counter ] while
;

